set -ex

MAIN="${MAIN:-main}"

if [[ $# -ne 2 ]]; then
  echo "Usage: getpr <git://.../.git> <branch-name>"
  echo "You can get the <git://.../.git> part and the <branch-name> from the bottom of the PR."
  exit 1
fi

git fetch $1 $2
git branch $2 FETCH_HEAD
git checkout $2 &&
git branch --set-upstream-to=$MAIN
